<div class="container">

     <div class="row mt-5">

        <div class="col">

            <div class="card">
                <div class="card-body">
                    <table class="table ">
                        <thead>
                            <tt>
                                 <td class=text-center>رقم فئة النقل</td>

                                <td class=text-center>اسم فئة النقل</td>
                            <td class="text-center" colspan="2">الإجراء</td>                
                            </tt>

                        </thead>

                        <tbody>
                            @foreach (var items in Model) {
