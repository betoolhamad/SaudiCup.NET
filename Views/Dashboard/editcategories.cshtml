@model Categories
@{
    
    Layout="/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row mt-5">

        <div class="col">
            <div class="card mt-5">
                <div class="card-body">
                    <form asp-action="UpdateCtegories" method="POST">
                        <div class="row">
                                                            
                            <input type="hidden" asp-for="Id" class="form-control">

                            <div class="col">
                                <label class="form-lable">اسم الفئة</label>
                                <input type="text" asp-for="Name" class="form-control">
                            </div>

                            <div class="col">
                                <label class="form-lable">وصف الفئة</label>
                                <input type="text" asp-for="Description" class="form-control">
                            </div>


                                  <div class="row">
                            <div class="col">
                                <label class="form-lable">الأيقونة </label>
                                <input type="text" asp-for="Icon" class="form-control">
                            </div>

                            <div class="col">
                                <label class="form-lable">الرابط</label>
                                <input type="text" asp-for="Url" class="form-control">
                            </div>

                            <div class="row mt-5">
                                <div class="col text-center">
                                    <button type="submit" class="btn-hover color-1">تعديل</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>


            </div>
        </div>



    </div>
</div>